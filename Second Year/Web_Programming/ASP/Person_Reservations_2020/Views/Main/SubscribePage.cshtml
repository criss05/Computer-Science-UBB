@{
	Layout = null;
}
<html>
<head>
	<title>My channels</title>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function(){
			$("#ViewMyChannels").click(function() {
				window.location.href = "/Main/GetChannelsPage";
			});

			$("#ViewSubscribedChannels").click(function() {
				window.location.href = "/Main/GetSubscribedChannelsPage/";
			});


			$("#Subscribe").click(function(){
				window.location.href = "/Main/SubscribePage/";
			});

			$("#subscribeButton").click(function(){
				const channel = $("#channelInput").val();
				$.get("/Main/AddSubscription", {channel: channel})
			});
		});
	</script>
</head>
<body>
	<button id="ViewChannels">View channels</button>
	<button id="ViewSubscribedChannels">View subscribed channels</button>
	<button id="Subscribe">Subscribe to channel</button>
	<h2>Channels</h2>
	<input type="text" id="channelInput" />
	<button id="subscribeButton">Search</button>
</body>
</html>
